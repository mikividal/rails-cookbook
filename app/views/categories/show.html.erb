
<div class="banner" style="background-image: url('<%= image_path "banner.jpg"%>')">
  <h1><%= @category.name %> </h1>
</div>


<div class="container w-75">
  <div class="info-top">
    <h1>Recipes</h1>
    <%= link_to "Add Recipe", new_category_bookmark_path(@category.id), class:"btn btn-gradient"%>
  </div>

<div class="cards">
  <% @category.bookmarks.each do |bookmark| %>
  <div class="card-trip">
    <img src="<%= bookmark.recipe.image_url %>" alt="<%= bookmark.recipe.name %> image">
    <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm:"Are you sure?"}, class:'btn btn-delete' do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.recipe.name %></h2>
          <p><%= bookmark.recipe.description.truncate(80) %></p>
        </div>
      </div>
      <div class="bottom-info">
        <h6>❝<%= bookmark.comment %></h6>
        <p class="card-trip-pricing"> <%= bookmark.recipe.rating %><%= "⭐️" * bookmark.recipe.rating %> </p>
      </div>
  </div>
  <% end %>
</div>
</div>


