<div class="form-new">
  <h3>Add a new Category </h1>

  <%= simple_form_for (@category) do |f| %>
    <%= f.input :name, placeholder: "The category name..."%>
    <%= f.input :photo, as: :file %>
    <%= f.submit class:"btn btn-info" %>
  <% end %>

  <%= link_to "Back to Categories", categories_path %>
</div>
